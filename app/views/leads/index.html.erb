<% content_for :header_tags do %>
  <%= stylesheet_link_tag 'leads', :plugin => 'leads' %>
  <%= javascript_include_tag 'fill_date', :plugin => 'leads' %>
  <%= javascript_include_tag 'edit_on_click', :plugin => 'highrise-edit-on-click' %>
<% end %>

<div class="contextual">
  <%#= link_to_if_authorized l(:label_lead_view), {:controller => 'leads', :action => 'show', :id => @project}, :class => 'icon icon-user' %>
  <%#= link_to_if_authorized l(:label_lead_assign), {:controller => 'leads', :action => 'select', :id => @project}, :class => 'icon icon-move' %>
  <%#= link_to_if_authorized l(:label_lead_list), {:controller => 'leads', :action => 'list', :id => @project}, :class => 'icon icon-users' %>
  <%= link_to l(:label_lead_new), {:controller => 'leads', :action => 'new'}, :class => 'icon icon-add' %>
</div>

<h2><%= l(:label_lead_plural) %></h2>

<fieldset>
  <legend>Search Leads</legend>
  <% form_remote_tag(:url => {:controller => "leads", :action => "search"}, :method => :get, :update => "results") do %>
    <%= render :partial => "search" %>
  <% end %>
</fieldset>

<div id="results">
  <%= render :partial => 'leads' %>
</div>

<% content_for(:header_tags) do %>
  <style type="text/css">
    .icon-users { background-image: url(../../images/users.png); }
  </style>
<% end %>

