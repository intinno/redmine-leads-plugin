<% content_for :header_tags do %>
  <%= stylesheet_link_tag 'leads', :plugin => 'leads' %>
<% end %>

<div class="contextual">
  <%= link_to "Search", {:controller => 'leads', :action => 'search', :id => @project}, :class => 'icon icon-search' %>
  <%= link_to l(:label_lead_new), {:controller => 'leads', :action => 'new', :id => @project}, :class => 'icon icon-add' %>
</div>

<h2> Change Lead Information</h2>

<% labelled_tabular_form_for :lead, @lead, :url =>{:action => 'update', :id => @lead.id} do |f|  %>
  <%= render :partial => 'form', :locals => {:f => f}  %>
  <%= submit_tag l(:button_save) -%>
<% end -%>

<% content_for(:header_tags) do %>
  <style type="text/css">
    .icon-users { background-image: url(../../images/users.png); }
  </style>
<% end %>
