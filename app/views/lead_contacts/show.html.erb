<div class="contextual">
  <%= link_to "search", {:controller => 'lead_contacts', :action => 'index'}, :class => 'icon icon-search' %>
  <% if @contact.editable_by?(User.current) %>
    <%= link_to l(:button_edit), {:controller => 'lead_contacts', :action => 'edit', :id => @contact.id}, :class => 'icon icon-edit' unless @contact.nil? %>
  <% end %>
  <% if Lead.assignable_members.include?(User.current) %>
    <%= link_to "new", {:controller => 'lead_contacts', :action => 'new'}, :class => 'icon icon-add' %>
  <% end %>
</div>


<h2>Contact Details</h2>

<div class="box">
    <table>
      <tr><td><b>Name:</b></td><td><%= @contact.name %></td></tr>
      <tr><td><b>City:</b></td><td><%= @contact.city %></td></tr>
      <tr><td><b>Website:</b></td><td><%= @contact.website %></td></tr>
      <tr><td><b>Email:</b></td><td><%= @contact.email %></td></tr>
      <tr><td style="vertical-align:top"><b>Contact Details:</b></td><td><%= @contact.contact_details_html %></td></tr>
    </table>
</div>

