<table class="search">
  <tr>
    <td><b>Name</b></td><td><%= text_field 'contact', 'name', :alt_text => "Search by Name" %></td>
    <td><b>Email</b></td><td><%= text_field 'contact', 'email', :alt_text => "Search by Email" %></td>
  </tr>
  <tr>
    <td><b>City</b></td><td><%= text_field_with_auto_complete 'location', 'name' %></td>
    <td rowspan="2" style="vertical-align:top;"><b>Contact Details</b></td>
    <td rowspan="2"><%= text_area 'contact', 'contact_details', :rows => 2, :alt_text => "Search by contact details" %></td>
  </tr>
  <tr>
    <td><b>Website</b></td><td><%= text_field 'contact', 'website', :alt_text => "Search by Website" %></td>
  </tr>
  <tr>
    <td colspan="4" style="text-align:right;"><%= submit_tag "Search" %></td>
  </tr>
</table>

